  "main": "dist/release-script.js",
  "bin": {
    "release-script": "./dist/bin/release-script-cli.js"
  },
  "dependencies": {
    "ajv": "6.10.2",
    "ajv-keywords": "3.4.1",
    "command-line-args": "5.1.1",
    "command-line-usage": "6.1.0",
    "semver": "6.3.0",
    "simple-git": "1.126.0"
  },
  "engines": {
    "node": ">=10.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-json": "4.0.2",
    "@rollup/plugin-node-resolve": "7.1.1",
    "@rollup/plugin-typescript": "3.0.0",
    "@types/node": "12.12.5",
    "@types/command-line-args": "5.0.0",
    "@types/command-line-usage": "5.0.1",
    "@types/jest": "24.0.23",
    "@types/mkdirp": "0.5.2",
    "@types/rimraf": "2.0.3",
    "@types/semver": "6.2.0",
    "@typescript-eslint/parser": "2.6.0",
    "@typescript-eslint/eslint-plugin": "2.6.0",
    "eslint": "6.6.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-json": "2.0.1",
    "eslint-plugin-node": "10.0.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "json-schema-to-typescript": "7.1.0",
    "lint-staged": "9.4.2",
    "mkdirp": "0.5.1",
    "rimraf": "3.0.0",
    "rollup": "1.31.1",
    "ts-jest": "24.2.0",
    "tslib": "1.10.0",
    "typescript": "3.6.4"
  },
  "scripts": {
    "lint": "npm run code-lint && node scripts/compile-to-definitions",
    "lint-fix": "node scripts/compile-to-definitions --write",
    "code-lint": "npm run eslint -- . --ext .js,.ts,.json --cache",
    "prebuild": "npm run lint-fix",
    "build": "npm run rollup -- -c",
    "watch": "npm run rollup -- -c --watch",
    "test": "jest",
    "coverage": "jest --coverage",
    "eslint": "node --max_old_space_size=4096 node_modules/eslint/bin/eslint.js",
    "rollup": "node --max_old_space_size=4096 node_modules/rollup/dist/bin/rollup"
  },
  "files": [
    "dist/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src|scripts|schemas}/**/*.{js|ts|json}": [
      "eslint --cache"
    ]
  }
}
